<MainScreen>
    BoxLayout:
        orientation: 'vertical'

        MDBottomNavigation:
            id: tabs
            panel_color: 190/255, 210/255, 247/255, 1
            text_color_active: 42/255, 67/255, 132/255, 1
            font_style: ""  # Add font maybe.

            MDBottomNavigationItem:
                name: 'blog'
                text: "Blog"
                icon: 'book-open'
                BoxLayout:
                    orientation: "vertical"
                    padding: 0
                    canvas.before:
                        Color:
                            rgba: 232/255, 203/255, 146/255, 1
                        Rectangle:
                            source: "lifejackit background.png"
                            pos: self.pos
                            size: self.size

                    MDTabs:
                        id: blog_tabs
                        tab_hint_x: True
                        background_color: 8/255, 77/255, 204/255, 1

                        Tab:
                            icon: "school"
                            FloatLayout:
                                MDLabel:
                                    text: "Hello, congratulations for taking the first steps to turning your life around!\n\nUse this Blog section to learn about Education, Mental Health, Nutrition, and discover your Aspirations! "
                                    pos_hint: {"center_x": 0.5, "center_y": 1}
                                    halign: "center"
                                    valign: "top"






                        Tab:
                            icon: "head-heart"
                            BoxLayout:
                                orientation: "vertical"
                                padding: 50
                                MDLabel:
                                    text: "Mental health."
                                    halign: "center"
                        Tab:
                            icon: "dumbbell"
                            BoxLayout:
                                orientation: "vertical"
                                padding: 50
                                MDLabel:
                                    text: "Sleep, nutrition, exercise."
                                    halign: "center"
                        Tab:
                            icon: "star-shooting"
                            BoxLayout:
                                orientation: "vertical"
                                padding: 50
                                MDLabel:
                                    text: "Aspirations."
                                    halign: "center"


            MDBottomNavigationItem:
                name: 'education'
                text: "Education"
                icon: 'school'

                MDLabel:
                    text: 'Education'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'help'
                text: "Help"
                icon: 'chat-question'

                MDLabel:
                    text: 'HI ERIC HI KISHEN HI ELI :D'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'settings'
                text: "Settings"
                icon: 'cog'

                BoxLayout:
                    orientation: "vertical"
                    padding: 25
                    MDFlatButton:
                        text: "Log out"
                        theme_text_color: "Custom"
                        padding: 100, 8
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_size: "17sp"
                        text_color: 179/255, 0, 0, 1
                        line_color: 179/255, 0, 0, 1
                        on_release:
                            app.root.current = "starting"
