                                MDCard:
                                    opacity: 0.65
                                    padding: 4
                                    size_hint: None, None
                                    size: "200dp", "50dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.925}
                                    MDLabel:
                                        pos_hint: {"center_x": 0.6, "center_y": 0.55}
                                        font_size: 15
                                        text: "[b]Nutrition and Exercise[/b]"
                                        markup: True
                                        halign: "center"
                                        valign: "middle"
